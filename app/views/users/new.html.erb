<h1>New User</h1>
<div class="container">
  <div class="col-sm-6 myUserForm">
    <div class="form-horizontal">
      <%= form_for @user do |f| %>

        <div class="form-group">
          <%= f.label :name, class: 'col-sm-2 control-label'%>
            <div class="col-sm-10">
              <%= f.text_field :name, class: "form-control", placeholder: "John Doe"%>
            </div>
        </div>

        <div class="form-group">
          <%= f.label :email, class: 'col-sm-2 control-label'%>
            <div class="col-sm-10">
              <%= f.text_field :email, class: "form-control", placeholder: "example@gmail.com"%>
            </div>
        </div>

        <div class="form-group">
          <%= f.label :password, class: 'col-sm-2 control-label'%>
            <div class="col-sm-10">
              <%= f.text_field :password, class: "form-control", placeholder: "Password"%>
            </div>
        </div>

        <div class="form-group">
          <%= f.label :confirm, class: 'col-sm-2 control-label'%>
            <div class="col-sm-10">
              <%= f.text_field :password_confirmation, class: "form-control", placeholder: "Confirm Password"%>
            </div>
        </div>
        <div><%= f.submit "Create User"%></div>
      <%end%>
    </div>
  </div>
</div>
