<div class="container" style="text-align:center">
<h2><%= @image.title%>
<p>
  <%= image_tag @image.url, width: 600%>
</p>
<h3>By <%= @image.user.name%></h3>
<p>Upvotes: <%= @image.upvotes %></p>
  <% if @image.user.id == current_user.id %>
    <p>
      <%= link_to "Edit", edit_image_path(@image) %>
      <%= link_to "Delete", delete_image_path%>
    </p>
  <% else %>
      <p><%= link_to "", upvotes_path(:id => @image.id), class: "glyphicon glyphicon-circle-arrow-up" %></p>
  <% end %>
</div>
